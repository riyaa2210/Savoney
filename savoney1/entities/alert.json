{
  "name": "Alert",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "info",
        "warning",
        "danger",
        "success"
      ]
    },
    "category": {
      "type": "string",
      "enum": [
        "compliance",
        "fraud",
        "advisory",
        "system"
      ]
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "action_url": {
      "type": "string"
    },
    "related_transaction_id": {
      "type": "string"
    }
  },
  "required": [
    "title",
    "message",
    "type",
    "category"
  ]
}