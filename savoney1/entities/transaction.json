{
  "name": "Transaction",
  "type": "object",
  "properties": {
    "transaction_id": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "deposit",
        "withdrawal",
        "transfer",
        "investment",
        "redemption"
      ]
    },
    "amount": {
      "type": "number"
    },
    "currency": {
      "type": "string",
      "default": "INR"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "completed",
        "failed",
        "flagged"
      ]
    },
    "counterparty": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "risk_flag": {
      "type": "string",
      "enum": [
        "none",
        "low",
        "medium",
        "high"
      ]
    },
    "anomaly_score": {
      "type": "number"
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "type",
    "amount"
  ]
}